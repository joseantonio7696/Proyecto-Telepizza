<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>comprobarUsuario</servlet-name>
        <servlet-class>Controlador.comprobarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>altaUsuario</servlet-name>
        <servlet-class>Controlador.altaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sesionController</servlet-name>
        <servlet-class>Controlador.sesionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comprobarPedido</servlet-name>
        <servlet-class>Controlador.comprobarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tipoEnvio</servlet-name>
        <servlet-class>Controlador.tipoEnvio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comprobarTelefono</servlet-name>
        <servlet-class>Controlador.comprobarTelefono</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>comprobarUsuario</servlet-name>
        <url-pattern>/comprobarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>altaUsuario</servlet-name>
        <url-pattern>/altaUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sesionController</servlet-name>
        <url-pattern>/sesionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comprobarPedido</servlet-name>
        <url-pattern>/comprobarPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tipoEnvio</servlet-name>
        <url-pattern>/tipoEnvio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comprobarTelefono</servlet-name>
        <url-pattern>/comprobarTelefono</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>sesionController</welcome-file>
    </welcome-file-list>
</web-app>
